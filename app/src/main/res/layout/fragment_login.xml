<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".fragment.LoginFragment">

    <TextView
        android:id="@+id/tizimga_kirish_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif"
        android:text="Tizimga kirish"
        android:textColor="@color/my_black_color"
        android:textSize="36sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/login_card_tel"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="120dp"
        android:layout_marginRight="40dp"
        android:outlineSpotShadowColor="#cccccc"
        app:cardCornerRadius="10dp"
        app:cardElevation="12dp"
        app:layout_constraintTop_toBottomOf="@id/tizimga_kirish_text">

        <EditText
            android:id="@+id/login_tel_raqam_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:background="@drawable/edittext_bg"
            android:hint="Telefon raqam"
            android:inputType="phone" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/login_card_password"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="40dp"
        android:outlineSpotShadowColor="#cccccc"
        app:cardCornerRadius="10dp"
        app:cardElevation="12dp"
        app:layout_constraintTop_toBottomOf="@id/login_card_tel">

        <EditText
            android:id="@+id/login_password_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:background="@drawable/edittext_bg"
            android:hint="Parol"
            android:inputType="textPassword" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/login_singupbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Ro'yxatdan o'tish"
        android:textColor="@color/main_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_card_password" />

    <androidx.cardview.widget.CardView
        android:id="@+id/login_card_btn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp"
        android:background="?selectableItemBackground"
        android:backgroundTint="@color/main_color"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground"
        android:outlineSpotShadowColor="@color/main_color"
        app:cardCornerRadius="10dp"
        app:cardElevation="12dp"
        app:layout_constraintTop_toBottomOf="@id/login_singupbtn">

        <TextView
            android:id="@+id/login_enter_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:background="@drawable/edittext_bg"
            android:gravity="center"
            android:text="Tizimga kirish"
            android:textColor="#fff"
            android:textSize="24sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/login_version_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/edittext_bg"
        android:gravity="center"
        android:text="Version 1.0"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/login_card_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>